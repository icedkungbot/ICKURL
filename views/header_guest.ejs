      <li style="float:right"><button class="theme" id="ThemeSwitch">ðŸ’¡Light On</button></li>

</ul>
<script>
  const myswitch = document.getElementById("ThemeSwitch");
  const ThemeSwitch = () =>{
      if(localStorage.getItem("theme") == 'dark'){
        localStorage.setItem("theme", "light")
        myswitch.innerText = "ðŸ’¡Light Off"
        document.querySelector("body").classList.remove("dark");
      }else if(localStorage.getItem("theme") == 'light'){
        localStorage.setItem("theme", "dark")
        myswitch.innerText = "ðŸ’¡Light On"
